<%= form_for(hospice) do |f| %>
  <% if hospice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hospice.errors.count, "error") %> prohibited this hospice from being saved:</h2>

      <ul>
      <% hospice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :address1 %>
    <%= f.text_field :address1, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :address2 %>
    <%= f.text_field :address2, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :main_phone %>
    <%= f.text_field :main_phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :fax %>
    <%= f.text_field :fax, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :referral_phone %>
    <%= f.text_field :referral_phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="field form-group">
    <span><strong>Check if this hospice owns beds:&nbsp;</strong></span>
    <%= f.check_box :bed_owner %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
