<div class="panel-group" id="accordian">
  <ol class='openBed'>
    <% @open_beds.each do |bed| %>
      <li>
        <div class="panel-heading">

          <strong><%= bed.hospice.name %></strong>
          <br>
          <%if bed.gender.capitalize == "Female"%>
            <i class="fa fa-female"></i>
          <%else%>
            <i class="fa fa-male"></i>
          <%end%>

          <%= bed.room_type.capitalize %>
          <%= bed.bed_type %>
          <br>
          <%= link_to 'RESERVE', new_bed_reservation_path(bed), id: 'button_font', class: "btn btn-success" %>
          <a data-toggle="collapse" data-parent="#accordian" href="#collapse<%=bed.id%>">
            <span class="fa fa-arrow-circle-down" onclick="toggleInfo(this)">More Info</span></a>
        </div>

        <div id="collapse<%=bed.id%>" class="panel-collapse collapse out">
          <div class="panel-body">
            <p class="hospiceAddress">
              <%= bed.hospice.name %><br>
              <%= bed.hospice.address1 %><br>

            <%if bed.hospice.address2?%>
              <%= bed.hospice.address2 %><br>
            <%end%>

              <%= bed.hospice.city %>, <%= bed.hospice.state %> <%= bed.hospice.zipcode %>
            </p>

            <p>
              <strong>Phone:</strong>
              <%= bed.hospice.main_phone %>
            </p>

            <p>
              <strong>Fax:</strong>
              <%= bed.hospice.fax %>
            </p>

            <%if bed.hospice.referral_phone?%>
            <p>
              <strong>Referral phone:</strong>
              <%= bed.hospice.referral_phone %>
            </p>
            <%end%>

            <p>
              <strong>Description:</strong>
              <%= bed.hospice.description %>
            </p>

          </div>
        </div>
      </li>
    <% end %>
  </ol>
</div>
